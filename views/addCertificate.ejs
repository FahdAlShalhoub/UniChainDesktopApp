<%- include("./layouts/header") -%>
<div class="content">
  <div class="card">
    <div class="card-body">
      <form action="">
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label for="" class="">Student Name</label>
              <input type="text" class="form-control" placeholder="Enter the Name of the student">
            </div>
            <div class="form-group">
              <label for="">Nationalitey</label>
              <input type="text" class="form-control">
            </div>
            <div class="form-group">
              <label for="">National ID / Iqama Number</label>
              <input type="number" class="form-control" maxlength="10">
            </div>
            <div class="form-group">
              <label for="">Date Of Birth</label>
              <input type="date" class="form-control">
            </div>
            <div class="form-group">
              <label for="">Place Of Birth</label>
              <input type="text" class="form-control">
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <label for="">College</label>
              <input type="text" class="form-control">
            </div>
            <div class="form-group">
              <label for="">Major</label>
              <input type="text" class="form-control">
            </div>
            <div class="form-group">
              <label for="">Graduation Date</label>
              <input type="date" class="form-control">
            </div>
            <div class="form-group">
              <label for="">GPA</label>
              <input type="number" class="form-control" max="5">
            </div>
          </div>
          <div class="col-sm-12 d-flex justify-content-center">
            <input type="text" type="submit" class="btn btn-primary" value="submit">
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include("./layouts/footer") -%>
    